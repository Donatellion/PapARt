<filter name="Projector Distort">
    <description>Apply the opposite of the projector lens distortion to get a good visualisation.</description>
    <vertex>anaglyph.vert</vertex>
    <fragment>anaglyph.frag</fragment>
    <textures input="2" output="1">
        <intexture type="sampler2d" name="leftTex" offset="offset" label="Input image">0</intexture> 
        <intexture type="sampler2d" name="rightTex" offset="offset" label="Input image">1</intexture> 
    </textures>
</filter>

