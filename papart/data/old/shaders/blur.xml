<filter name="Dream">
    <description>Dream Vision Post Processing Filter</description>
    <vertex>blur.vert</vertex>        
    <fragment>blur.frag</fragment>    
    <textures input="2" output="1">
        <intexture type="sampler2d" name="sceneTex" offset="offset" label="Input texture">0</intexture> 
        <intexture type="sampler2d" name="mask" offset="offset" label="mask texture">1</intexture> 
    </textures>
    <parameter type="vec2" name="wh" label="2D rotation matrix">0.2 0.2</parameter>
    <parameter type="int" name="derivSize" label="2D rotation matrix">5</parameter>
    <parameter type="float" name="intensT" label="2D rotation matrix">0.3</parameter>
</filter>



